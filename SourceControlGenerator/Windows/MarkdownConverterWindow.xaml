<local:HideWindowBase x:Class="LL.SCG.Windows.MarkdownConverterWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:behavior="clr-namespace:LL.SCG.Controls.Behavior"
		xmlns:local="clr-namespace:LL.SCG.Windows"
		mc:Ignorable="d"
		Title="Markdown Converter" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="1" Margin="8">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="32" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<TextBlock Text="Markdown Input" TextAlignment="Center" />
			<Grid Grid.Row="1" Grid.Column="0">
				<TextBox TextWrapping="{Binding TextWrapMode, FallbackValue=Wrap}" Text="{Binding Input, Mode=TwoWay, FallbackValue=''}" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Visible" />
			</Grid>
			
			<TextBlock Grid.Column="2" Text="Output" TextAlignment="Center" />
			<Grid Grid.Row="1" Grid.Column="2" >
				<TextBox TextWrapping="{Binding TextWrapMode, FallbackValue=Wrap}" IsReadOnly="True" Text="{Binding Output, FallbackValue=''}" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Visible" />
			</Grid>
		</Grid>
		<StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" behavior:MarginSetter.Margin="4" Orientation="Horizontal" Margin="4">
			<ComboBox ItemsSource="{Binding Formatters}" SelectedValue="{Binding SelectedFormatter, Mode=TwoWay}" DisplayMemberPath="Name" behavior:ComboBoxWidthFromItemsBehavior.ComboBoxWidthFromItems="True" />
			<Button Content="Convert" Command="{Binding ConvertCommand}" CommandParameter="{Binding SelectedFormatter}" />
		</StackPanel>
	</Grid>
</local:HideWindowBase>
