<win:HideWindowBase x:Class="SCG.Modules.DOS2DE.Windows.LocaleOptionsWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SCG.Modules.DOS2DE.Windows"
		xmlns:win="clr-namespace:SCG.Windows;assembly=SourceControlGenerator"
		xmlns:data="clr-namespace:SCG.Modules.DOS2DE.Data.App"
		xmlns:core="clr-namespace:SCG.Modules.DOS2DE.Core"
		xmlns:controls="clr-namespace:SCG.Controls;assembly=SourceControlGenerator"
		mc:Ignorable="d"
		d:DataContext="{d:DesignInstance data:LocaleEditorSettingsDesignData, IsDesignTimeCreatable=True}"
		Title="Localization Editor Settings" Height="450" Width="400">
	<win:HideWindowBase.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/SourceControlGenerator;component/ThemeSystem/ResourceDictionary/MainAppDictionary.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</win:HideWindowBase.Resources>
	<Grid>
		<TabControl TabStripPlacement="Left">
			<TabItem Header="General">
				<TabItem.Resources>
					<Style TargetType="TextBlock">
						<Setter Property="TextAlignment" Value="Left" />
						<Setter Property="VerticalAlignment" Value="Center" />
						<Setter Property="HorizontalAlignment" Value="Center" />
					</Style>
				</TabItem.Resources>
				<StackPanel Orientation="Vertical" Margin="4">
					<Border BorderThickness="1" BorderBrush="Gray">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="3*" />
							</Grid.ColumnDefinitions>
							<TextBlock Text="Last Import" />
							<Rectangle Grid.Column="1" Style="{StaticResource VerticalSeparator}" Margin="0" />
							<controls:FileBrowseControl Grid.Column="2" BorderBrush="0" />
						</Grid>
					</Border>
				</StackPanel>
			</TabItem>
			<TabItem Header="XML Export">
				<StackPanel>
					<StackPanel.Resources>
						<Style TargetType="CheckBox">
							<Setter Property="Margin" Value="2,3,2,0" />
						</Style>
					</StackPanel.Resources>
					<CheckBox Content="Export Keys" IsChecked="{Binding ExportKeys}"
					ToolTip="{x:Static core:DOS2DETooltips.Checkbox_Locale_ExportXML_Keys}" />
					<CheckBox Content="Export Source" IsChecked="{Binding ExportSource}"
					ToolTip="{x:Static core:DOS2DETooltips.Checkbox_Locale_ExportXML_Source}" />
				</StackPanel>
			</TabItem>
		</TabControl>
	</Grid>
</win:HideWindowBase>
